/* formularios y tablas */
/*
Amarillo: #ffc000
Azul: #00a2ff
*/

table{
	margin-bottom: 12px;
	width: 100%;
	border: 1px #b3e3ff solid;
	border-radius: 6px 6px 0px 0px;
	-moz-border-radius: 6px 6px 0px 0px;
	-webkit-border-radius: 6px 6px 0px 0px;
}
table thead tr td{
	height: 24px;
	overflow: hidden;
	text-align: center;
	font-size: 0.9em;
	line-height: 100%;
	font-weight: bold;
	background-color: #7e909a;
	color: white;
	border-radius: 3px 3px 0px 0px;
	-moz-border-radius: 3px 3px 0px 0px;
	-webkit-border-radius: 3px 3px 0px 0px;
}
table tfoot tr td{
	font-weight: bold;
}
table tr{
	background-color: #f2f2f1;
}
table .on{
	background-color: #fbfbfb;
}
table tr .tdhr{
	font-size: 0.85em;
	font-style: italic; 
	background-color: #d7f0ff;
	border-radius: 0px 6px 0px 0px;
	-moz-border-radius: 0px 6px 0px 0px;
	-webkit-border-radius: 0px 6px 0px 0px;
}
table tr:hover{
	background-color: #d7f0ff;
}
table tr td{
	padding: 2px 2px;
}
table tr td a{
	text-decoration: none;
	color: #00a2ff;
}
table tr td a:hover{
	color: #333;
}
.td-center{
	text-align: center;
}

.content-result{
	width: 100%;
	overflow: auto;
	
}
.content-result h1{
	margin: 12px 0;
	color: #999;
}
.content-result h2{
	margin: 12px 0;
}
.content-result h3{
	margin: 6px 0;
}
.content-modal-generic{
	width: 95%;
	padding: 12px;
}

@media screen and (max-width: 600px){
    .td_opt{
    	display: none;
    }
}